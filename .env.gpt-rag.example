# GPT RAG Integration Environment Variables
# Add these to your existing .env.local file

# Custom GPT API Key (generate a secure key for production)
NORDFLYTT_GPT_API_KEY=nordflytt_gpt_api_key_2025

# Rate limiting
GPT_RATE_LIMIT_MAX=100

# OpenAI Configuration (if using GPT-4)
OPENAI_API_ENDPOINT=https://api.openai.com/v1

# GPT Integration Feature Flag
GPT_INTEGRATION_ENABLED=true

# Analytics and Monitoring
ENABLE_GPT_ANALYTICS=true
GPT_ANALYTICS_RETENTION_DAYS=30

# Email Service Configuration (for ticket notifications)
EMAIL_SERVICE_PROVIDER=sendgrid
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM_ADDRESS=support@nordflytt.se
EMAIL_FROM_NAME=Nordflytt Support

# Webhook URLs for Custom GPT (optional)
GPT_WEBHOOK_URL=https://api.openai.com/your-custom-gpt-webhook
GPT_WEBHOOK_SECRET=your-webhook-secret