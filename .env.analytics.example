# Analytics Configuration for Nordflytt
# Copy this file to .env.local and fill in your actual IDs

# Google Analytics 4
# Get this from: https://analytics.google.com/analytics/web/
# Admin > Data Streams > Web > Measurement ID
NEXT_PUBLIC_GA4_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager
# Get this from: https://tagmanager.google.com/
# Container ID format: GTM-XXXXXXX
NEXT_PUBLIC_GTM_CONTAINER_ID=GTM-XXXXXXX

# Facebook Pixel
# Get this from: https://business.facebook.com/events_manager/
# Pixel ID is a long number
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=XXXXXXXXXXXXXXXXX

# Google Search Console Site Verification
# Add this meta tag value from Search Console
NEXT_PUBLIC_GOOGLE_SITE_VERIFICATION=xxxxxxxxxxxxxxxxxxxxx

# Hotjar Site ID (optional)
# For heatmaps and session recordings
NEXT_PUBLIC_HOTJAR_SITE_ID=XXXXXXX

# Microsoft Clarity (optional)
# Free alternative to Hotjar
NEXT_PUBLIC_CLARITY_PROJECT_ID=xxxxxxxxxx

# Additional Marketing Platforms (optional)
NEXT_PUBLIC_LINKEDIN_PARTNER_ID=XXXXXXX
NEXT_PUBLIC_TWITTER_PIXEL_ID=xxxxx
NEXT_PUBLIC_PINTEREST_TAG_ID=xxxxxxxxxxxxx
NEXT_PUBLIC_TIKTOK_PIXEL_ID=XXXXXXXXXXXXXXXXX

# Email Marketing
MAILCHIMP_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx-us1
MAILCHIMP_LIST_ID=xxxxxxxxxx
SENDGRID_API_KEY=SG.xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# SMS Marketing (optional)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+46xxxxxxxxx

# Analytics API Keys (for dashboard)
GOOGLE_ANALYTICS_PROPERTY_ID=XXXXXXXXX
GOOGLE_ANALYTICS_VIEW_ID=XXXXXXXXX
# Create service account and download JSON key
GOOGLE_ANALYTICS_CREDENTIALS='{"type":"service_account","project_id":"..."}' 

# SEO Tools API Keys (optional)
SEMRUSH_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AHREFS_API_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
MOZ_ACCESS_ID=member-xxxxxxxxxxxxx
MOZ_SECRET_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx