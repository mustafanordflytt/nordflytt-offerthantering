              const currentHour = new Date().getHours()
              
              // Packhj√§lp: 08:00-12:00
              if (currentHour >= 8 && currentHour < 12 && job.services.includes('Packhj√§lp')) {
                return getServiceConfig('Packhj√§lp', job).timeRange
              }
              // Flytt: 12:00-16:00  
