# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_key

# JWT Secret for CRM authentication
JWT_SECRET=your_jwt_secret_key

# SendGrid Configuration (Email notifications)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@nordflytt.se
SENDGRID_REPLY_TO=info@nordflytt.se

# Twilio Configuration (SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+46701234567
TWILIO_TEST_NUMBER=+46701234567

# Notification Processing
CRON_SECRET=your_cron_secret_for_processing_queue
NOTIFICATION_API_KEY=your_api_key_for_notification_management

# Google Maps (Optional - for address autocomplete)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your_google_maps_key

# Fortnox Integration (Optional - for accounting)
FORTNOX_CLIENT_SECRET=your_fortnox_client_secret
FORTNOX_ACCESS_TOKEN=your_fortnox_access_token

# Development
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000