# =============================================================================
# NORDFLYTT AI SYSTEM - UNIFIED ENVIRONMENT CONFIGURATION
# Complete configuration for all 5 phases integrated system
# =============================================================================

# Application Environment
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3001

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nordflytt_ai
DB_HOST=localhost
DB_PORT=5432
DB_NAME=nordflytt_ai
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_SSL=false
DB_POOL_SIZE=20
DB_TIMEOUT=30000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Phase Control - Feature Flags
ENABLE_PHASE_1=true
ENABLE_PHASE_2=true
ENABLE_PHASE_3=true
ENABLE_PHASE_4=true
ENABLE_PHASE_5=true

# Phase 1: Smart Clustering Configuration
PHASE1_MAX_CLUSTERS=20
PHASE1_WEATHER=true
PHASE1_TRAFFIC_WEIGHT=0.3
PHASE1_EFFICIENCY_THRESHOLD=0.85
PHASE1_OPTIMIZATION_INTERVAL=30

# Phase 2: Route Optimization Configuration
PHASE2_MAX_VEHICLES=8
PHASE2_FUEL_WEIGHT=0.4
PHASE2_CO2_TARGET=25
PHASE2_TRAFFIC_INTERVAL=15
PHASE2_RECALC_THRESHOLD=0.15

# Phase 3: Team Optimization Configuration
PHASE3_MAX_TEAM_SIZE=4
PHASE3_MIN_TEAM_SIZE=2
PHASE3_SKILL_WEIGHT=0.4
PHASE3_EXPERIENCE_WEIGHT=0.3
PHASE3_WORKLOAD_THRESHOLD=0.15

# Phase 4: Predictive Analytics Configuration
PHASE4_FORECAST_DAYS=30
PHASE4_RETRAIN_HOURS=168
PHASE4_CONFIDENCE_THRESHOLD=0.85
PHASE4_ACCURACY_TARGET=0.90
PHASE4_DYNAMIC_PRICING=false

# Phase 5: Autonomous Decisions Configuration
PHASE5_AUTONOMY_LEVEL=0.99
PHASE5_CONFIDENCE_THRESHOLD=0.90
PHASE5_HUMAN_REVIEW_THRESHOLD=0.75
PHASE5_MAX_DECISIONS_HOUR=100
PHASE5_EXECUTION_DELAY=5
PHASE5_ROLLBACK_ENABLED=true

# Feature Flags - Advanced Features
ENABLE_REAL_TIME=true
ENABLE_DYNAMIC_PRICING=false
ENABLE_WEATHER=true
ENABLE_TRAFFIC=true
ENABLE_ML=false
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_AUTONOMOUS_EXECUTION=false
ENABLE_HUMAN_REVIEW=true
ENABLE_MONITORING=true
ENABLE_AUDIT_LOGGING=true

# Master Optimization Configuration
MASTER_OPTIMIZATION=true
CROSS_PHASE_OPTIMIZATION=true
REAL_TIME_UPDATES=true
BATCH_PROCESSING=true
PARALLEL_PROCESSING=true
MAX_CONCURRENT_OPTIMIZATIONS=5

# Security Configuration
JWT_SECRET=nordflytt-ai-system-unified-secret-key-12345
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=nordflytt-encryption-key-unified-system

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESS=true

# Monitoring & Logging
MONITORING_ENABLED=true
METRICS_INTERVAL=60
DASHBOARD_UPDATE_INTERVAL=30
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Alert Thresholds
ALERT_EFFICIENCY_MIN=0.80
ALERT_ERROR_RATE_MAX=0.05
ALERT_RESPONSE_TIME_MAX=5000
ALERT_AUTONOMY_MIN=0.85
ALERT_CONFIDENCE_MIN=0.70

# External API Keys
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
SMHI_API_KEY=your_smhi_weather_api_key_here
TRAFFIC_API_KEY=your_traffic_api_key_here

# Notification Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=notifications@nordflytt.se
SMTP_PASS=your_smtp_password_here
NOTIFICATION_EMAILS=admin@nordflytt.se,ops@nordflytt.se

# Development/Testing Configuration
AUDIT_LOGGING=true
DATA_ENCRYPTION=false
PERFORMANCE_MONITORING=true

# Production Overrides (when NODE_ENV=production)
# These will automatically override development settings
PROD_ENABLE_PHASE_1=true
PROD_ENABLE_PHASE_2=true
PROD_ENABLE_PHASE_3=true
PROD_ENABLE_PHASE_4=true
PROD_ENABLE_PHASE_5=true
PROD_ENABLE_DYNAMIC_PRICING=true
PROD_ENABLE_ML=true
PROD_ENABLE_ADVANCED_ANALYTICS=true
PROD_ENABLE_AUTONOMOUS_EXECUTION=true
PROD_PHASE5_AUTONOMY_LEVEL=0.99
PROD_PHASE5_CONFIDENCE_THRESHOLD=0.95
PROD_PHASE5_HUMAN_REVIEW_THRESHOLD=0.80

# System Information
SYSTEM_VERSION=1.0.0
SYSTEM_BUILD_DATE=2025-01-14
SYSTEM_DEPLOYMENT=unified-development